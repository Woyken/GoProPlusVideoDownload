{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "pretty": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "test",
    "release",
    "app/main.prod.js",
    "app/renderer.prod.js",
    "app/dist",
    "dll"
  ]
}
